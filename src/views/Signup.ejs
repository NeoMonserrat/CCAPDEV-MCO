<!DOCTYPE html>
<html>
<head> 
    <title>Sign up | Netboxd</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="../CSS/Signup.css">
    <link rel="stylesheet" href="../CSS/MovieInformation.css">
</head>
<body>
    <% if (errorMessage) { %> <!-- Check if errorMessage exists -->
        <div id="errorPopup" class="popup">
            <div class="popup-content">
                <span class="close-btn" onclick="closeErrorPopup()">&times;</span>
                <h2>Error!</h2>
                <p><%= errorMessage %></p>
            </div>
        </div>
    <% } %>
    
    <div class="container">
        <div class="left_container">
            <img src="../Media/signlogo.png" alt="Logo">
        </div>

        <div class="right_container">
            <div class="top_pillar">
                <a href="../HTML/index.html"> <img src="../Media/Netboxd.png"> </a>
                <h1>Sign up for Netboxd</h1>
            </div>
            

            <div class="middle_pillar">
                <form action="/Signup" method="post" name="signup">
                    <label for="yourEmail">Email Address:</label><br>
                    <input type="email" id="email" name="email" required autocomplete="off"><br><br>
                    <label for="yourUser">Username:</label><br>
                    <input type="text" id="username" name="username" required autocomplete="off"><br><br>
                    <label for="yourPass">Password:</label><br>
                    <input type="password" id="password" name="password" required autocomplete="off"><br><br>
                    <label for="yourPass">Re-enter Password:</label><br>
                    <input type="password" id="repassword" name="repassword" required autocomplete="off"><br><br><br>
                     <input type="submit" value="Create Account"> 
                </form>
            </div>
            
            <div class="bottom_pillar">
                <p>Already have an account? <a href="/Login">Log in</a></p>
                <% if (errorMessage) { %>
                    <span id="errorMessage" style="color: red";><%= errorMessage %></span>
                <% } %>
            </div>
        </div>
    </div>
    <script>
        // Function to show the error popup if errorMessage exists
        function showErrorPopup() {
            errorPopup.style.display = "block";
        }

        // Function to close the error popup
        function closeErrorPopup() {
            errorPopup.style.display = "none";
        }

        // Check if errorMessage exists and call showErrorPopup function
        if(errorMessage) {
            showErrorPopup();
        }
    </script>
</body>
</html>
