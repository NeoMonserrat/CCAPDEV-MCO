<!DOCTYPE html>
<html>
<head> 
    <title>Login | Netboxd</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="../CSS/Login.css">
    <link rel="stylesheet" href="../CSS/MovieInformation.css">
</head>
<body>
    <% if (errorMessage) { %> <!-- Check if errorMessage exists -->
        <div id="errorPopup" class="popup">
            <div class="popup-content">
                <span class="close-btn" onclick="closeErrorPopup()">&times;</span>
                <h2>Error!</h2>
                <p><%= errorMessage %></p>
            </div>
        </div>
    <% } %>
    
    <div class="container">
        <div class="left_container">
            <a href="../HTML/index.html"> <img src="../Media/Netboxd.png" alt="Logo"> </a>
        </div>

        <div class="right_container">
            <div class="top_pillar">
                <h1>Login to Netboxd</h1>
            </div>

            <div class="middle_pillar">
                <form action="/Login" method="post">
                    <label for="username">Username:</label><br>
                    <input type="text" id="username" name="username" required><br><br>
                    <label for="password">Password:</label><br>
                    <input type="password" id="password" name="password" required><br><br>
                    <input type="checkbox" style="accent-color: red;"> <span style="margin-left: 5px;">Remember me</span><br><br><br>
                    <input type="submit" value="Login">
                </form>
            </div>
            
            <div class="bottom_pillar">
                <p>Don't have an account? <a href="/Signup">Sign up</a></p>
                <% if (errorMessage) { %>
                    <span id="errorMessage" style="color: red";><%= errorMessage %></span>
                <% } %>
            </div>
        </div>
    </div>

    <script>
        // Function to show the error popup if errorMessage exists
        function showErrorPopup() {
            errorPopup.style.display = "block";
        }

        // Function to close the error popup
        function closeErrorPopup() {
            errorPopup.style.display = "none";
        }

        // Check if errorMessage exists and call showErrorPopup function
        if(errorMessage) {
            showErrorPopup();
        }
    </script>
</body>
</html>
