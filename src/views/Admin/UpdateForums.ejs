<!DOCTYPE HTML>
<html>
<head>
    <title>Forums | NetBoxD</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link href="/CSS/Design.css" rel="stylesheet">
    <link href="/CSS/Forums.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css">
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="/JS/Forums.js"></script>
</head>

<body>
    <header>
        <div class="TopBar">
            <a class="logo" href="/">
                <img src="../Media/Netboxd.png" height="40" alt="Netflix Logo">
            </a>
            <div class="buttons">
                <div class="icons">
                    <a class="button" href="/CreatePost">
                        <div class="plus-icon"></div>
                    </a>
                    <a class="button" href="/UserProfile">
                    <div class="person-icon"></div>
                    </a>
                </div>
            </div>
        </div>
        <nav>
            <div class="menu">
                <div class="movies">
                    <button class="moviesbtn">Movies & Shows</button>
                    <div class="movies-content">
                        <a href="/Movies">Movies</a>
                        <a href="/TvShows">TV Shows</a>
                    </div>
                </div>
                <a href="/Forums">Forums</a>
                <a href="/AboutUs">About Us</a>
                <a href="/Help">Help</a>
            </div>
            <a href="/Signup">
                <div class="signup">Sign up</div>
            </a>
        </nav>        
    </header>

    <main>
        <div class="forums-container">
            <div class="forum-header">
                <h1>Update Forums</h1>
            </div>
            <section>
                <h2>General Discussions</h2>
                <div class="general-discussion">
                    <% posts.filter(post => post.post_category === 'General').forEach(post => { %>
                        <div class="post">
                            <h3><a href="/Post/<%= post._id %>">
                                <%= post.post_title %></a></h3>
                            <p><%= post.post_content %></p>
                            <br>
                            <p class="date">Created on <%= post.post_date.toLocaleString('en-US', { dateStyle: 'medium', timeStyle: 'short' }) %></p>
                            <button class="delete-button" data-post-id="<%= post._id %>">Delete</button>
                        </div>
                    <% }) %>
                </div>
            </section>
            
            <section>
                <h2>Movies</h2>
                <div class="movies-discussion">
                    <% posts.filter(post => post.post_category === 'Movies').forEach(post => { %>
                        <div class="post">
                            <h3><a href="/Post/<%= post._id %>">
                                <%= post.post_title %></a></h3>
                            <p><%= post.post_content %></p>
                            <br>
                            <p class="date">Created on <%= post.post_date.toLocaleString('en-US', { dateStyle: 'medium', timeStyle: 'short' }) %></p>
                            <button class="delete-button" data-post-id="<%= post._id %>">Delete</button>
                        </div>
                    <% }) %>
                </div>
            </section>
            
            <section>
                <h2>TV Shows</h2>
                <div class="tv-shows-discussion">
                    <% posts.filter(post => post.post_category === 'TvShows').forEach(post => { %>
                        <div class="post">
                            <h3><a href="/Post/<%= post._id %>">
                                <%= post.post_title %></a></h3>
                            <p><%= post.post_content %></p>
                            <br>
                            <p class="date">Created on <%= post.post_date.toLocaleString('en-US', { dateStyle: 'medium', timeStyle: 'short' }) %></p>
                            <button class="delete-button" data-post-id="<%= post._id %>">Delete</button>
                        </div>
                    <% }) %>
                </div>
            </section>
        </div>
    </main>
    
    
    <footer>
        <div class="left_pillar"> 
            <ul class="left_ul">  
                <h3>Netboxd</h3>
                <li> <a href="../HTML/index.html"> Home </a></li>
                <li> <a href="../HTML/MovieInformation.html"> Movies Information </a></li>
                <li> <a href="../HTML/ReviewsandRatings.html"> Reviews and Ratings </a></li>
            </ul>
        </div>

         <div class="center_pillar"> 
            <div class="social_media">
                <h3>Social Media</h3>
            </div>
             <div class="social_icons">
                <ul>  
                    <li><a href="https://www.facebook.com/netboxd"><i class="fab fa-facebook-f"></i></a></li>
                    <li><a href="https://www.instagram.com/netboxd/"><i class="fab fa-instagram"></i></a></li>
                    <li><a href="https://twitter.com/netboxdOfficial"><i class="fab fa-twitter"></i></a></li>
                    <li><a href="https://www.tiktok.com/@netboxd"><i class="fab fa-tiktok"></i></a></li>
                    <li><a href="https://www.youtube.com/channel/UCJnSrgSig5Ujl031XaQzKVg"><i class="fab fa-youtube"></i></a></li>
                </ul>
             </div>   
        </div>
        
        <div class="right_pillar"> 
            <ul class="right_ul">  
                <h3>More Contacts</h3>
                <li> Email: Netboxd@gmail.com</li>
                <li> Tel: 1234-5678</li>
            </ul>
        </div>
    </footer>
</body>
</html>